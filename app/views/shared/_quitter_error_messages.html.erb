<% if @quitter.errors.any? %>
<div id="error_explanation">
    <div class="alert alert-danger">
        The form contains <%= pluralize(@quitter.errors.count, "error") %>
    </div>
    <ul>
        <% @quitter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>    
</div>
<% end %>