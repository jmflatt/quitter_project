<% provide(:title, 'Information') %>
<h1>Enter Your Information</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        
      <%= form_for(@quitter) do |f| %>
        <%= render 'shared/quitter_error_messages' %>
      
        <%= f.label :user_name %>
        <%= f.text_field :user_name, class: 'form-control', placeholder: 'Enter User Name' %>
        
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter Name' %>
        
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: 'form-control' %>
        
        <%= f.label :times_per_week %>
        <%= f.text_field :times_per_week, class: 'form-control' , placeholder: 'How many packs per week?' %>
        
        <%= f.label :cost_per_pack %>
        <%= f.text_field :cost_per_pack, class: 'form-control', placeholder: 'What is the average cost per pack?' %>
        
        <%= f.submit "My Results", classA: "btn btn-primary" %>
        <% end %>
        
    </div>
</div>

